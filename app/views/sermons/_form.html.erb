<div class="panel panel-default">
  <div class="panel-heading">
    Create a Sermon Podcast
  </div>
  <div class="panel-body">
    <div class="container">
      
      <%= form_for @sermon, :html => { multipart: true } do |f| %>

        <div class="row">
          <div class="form-group">
            <label>Sermon Name</label>
            <%= f.text_field :title, placeholder: "Be clear and descriptive", class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="form-group">
            <label>Summary</label>
            <%= f.text_area :summary, rows: 5, placeholder: "What is the Sermon about?", class: "form-control" %>
          </div>
        </div>


  <div class="row">
    <div class="col-xs-12">
      <label>Start Date</label>
      <%= f.label :date %>
      <%= f.date_select :date %>
      <%= f.label :"Time (24 Hours)" %>
      <%= f.time_select :time %>
    </div>
  </div>

        <div class="row">
          <div class="col-md-4">
            <div class="form-group">              
              <span class="btn btn-default btn-file">
                  <i class="fa fa-cloud-upload fa-lg"></i> Upload Photos 
                  <%= file_field_tag "images[]", type: :file, multiple: true %>
              </span>
            </div>    
          </div>
        </div>

        <div id="photos"><%= render 'photos/list' %></div>


        <div class="actions">
          <%= f.submit "Save", class: "btn btn-primary" %>
        </div>

      <% end %>

    </div>
  </div>
</div> 


<script>
  $(function() {

    $('#reservation_start_date').datepicker({
      dateFormat: 'dd-mm-yy'
    });
    $('#reservation_end_date').datepicker({
      dateFormat: 'dd-mm-yy'
    });

  });
</script>

 <%= render 'shared/javascript' %>