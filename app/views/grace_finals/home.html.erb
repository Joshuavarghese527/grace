            </div>    
            <div class="col-md-4">
              <h4><%= link_to sermon.title, sermon_path(sermon) %></h4>
            </div>  
              <div class="col-md-4">
              <h4><%= sermon.date.strftime(" %A, %b  %d  %Y") %> <br><%= sermon.time.strftime("%l:%M %p")%></h4>  
              <% if(!user_signed_in?) %>

            <% else %>
          <%= link_to "Update", edit_sermon_path(sermon), class: "btn btn-primary" %>
          <%= link_to 'Destroy', sermon_path(sermon),
              method: :delete,
              data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger'%>
          <% end %>
              </div>
          <hr>
        <% end %>
        <div class= "text-center">
       
         </div>

      </div>
    </div>
