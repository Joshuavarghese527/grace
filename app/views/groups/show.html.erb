 <%= render 'shared/navbar' %>
  <div class="section bg-white">
      <div class="container">
          
  <div id="pages">
<div class="panel panel-default">
  <div class="panel-body">
    
    <!-- Image -->
    <div class="row">
      <div class="col-md-12">
       <h1><%= @group.title %></h1>
        <%= image_tag @photos[0].image.url(), class: "img-responsive" if @photos.length > 0 %>
      </div>
    </div>

    <br>

    <!-- Main Info -->

    <!-- About -->
    <div class="row">
      <div class="col-md-4">
        <h2>About this Community Group</h2>
        <p><%= @group.description %></p>
      </div>

      <div class="col-md-4">
        <h2>Time and Date</h2>
        <p><h4><%= @group.date.strftime(" %A, %b  %d  %Y") %> <br><%= @group.time.strftime("%l:%M %p")%></p>
      </div>

      <div class="col-md-4">
        <h2>Address</h2>
        <p><%= @group.address %></p>
      </div>
  </div>



  
    <br>
    <hr>


    <!-- Google Map -->
    <div class="row">
      <div class="col-md-12">
        
        <div id="map"></div>

        <style>
          #map {
            width: 100%;
            height: 400px;
          }
        </style>

      <script>
      function initMap() {
      var uluru = {lat: <%= @group.latitude %>, lng: <%= @group.longitude %>};
      var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 15,
        center: uluru
        });
      var marker = new google.maps.Marker({
        position: uluru,
        map: map
        });
        }
  </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['google_map_id'] %>&callback=initMap">
    </script>
      </div>
    </div>
    
  </div>
</div>
</div>
</div>
</div>