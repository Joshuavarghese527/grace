<% if @audios %>

  <div class="row">
    <% @audios.each do |audio| %>   
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading preview">
            <%= image_tag audio.sound.url() %>
          </div>
          <div class="panel-body">
            <span class="pull-right">
              <%= link_to audio, remote: true, method: :delete, data: {confirm: "Are you sure?"} do %>
                <i class="fa fa-times fa-lg"></i>
              <% end %>
            </span>
          </div>
        </div>
      </div>
    <% end %>     
  </div>

<% end %>